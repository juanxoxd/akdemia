# ============================================
# OMR System - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ============================================
# General
# ============================================
NODE_ENV=development

# ============================================
# Service Ports
# ============================================
API_GATEWAY_PORT=3000
EXAM_SERVICE_PORT=3001
OMR_PROCESSOR_PORT=8000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ============================================
# Database (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_DATABASE=omr_db
DB_LOGGING=false

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# RabbitMQ
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# ============================================
# MinIO (S3-compatible storage)
# ============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET=omr-images

# ============================================
# OMR Processor Service
# ============================================
OMR_PROCESSOR_HOST=localhost
OMR_PROCESSOR_URL=http://localhost:8000

# ============================================
# API Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ============================================
# JWT Authentication (if implemented)
# ============================================
# JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRATION=3600

# ============================================
# Processing Configuration
# ============================================
# Override default thresholds if needed
# MARK_DETECTION_THRESHOLD=0.65
# CONFIDENCE_THRESHOLD=0.85
# MIN_QUALITY_SCORE=0.7
