{
  "name": "@omr/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "tsc -w",
    "migrate": "typeorm migration:run -d ./dist/data-source.js",
    "migrate:generate": "typeorm migration:generate -d ./dist/data-source.js",
    "migrate:revert": "typeorm migration:revert -d ./dist/data-source.js"
  },
  "dependencies": {
    "@omr/shared-types": "workspace:*",
    "typeorm": "^0.3.17",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.0"
  }
}
